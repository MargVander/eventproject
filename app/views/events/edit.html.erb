<h1 class="font-weight-light" align="center">Editer l'article</h1><br>

<div class="container col-md-8 order-md-1">
  <%= form_for @event do |f| %>


     <div class="form-group">
           <label>Date</label>
           <%= f.text_field :start_date, class: "form-control "  %>
     </div>

     <div class="form-group">
           <label>Duration</label>
           <%= f.text_field :duration, class: "form-control "  %>
     </div>

     <div class="form-group">
           <label>Title</label>
           <%= f.text_field :title, class: "form-control "  %>
     </div>

     <div class="form">
           <label>Description</label>
           <%= f.text_area :description, class: "form-control" %>
     </div><br>

     <div class="form-group">
           <label>Price</label>
           <%= f.text_field :price, class: "form-control "  %>
     </div>

     <div class="form-group">
           <label>Location</label>
           <%= f.text_field :location, class: "form-control "  %>
     </div>

     <div class="form-group">
           <%= submit_tag "Edit event", class: 'btn btn-secondary btn-lg btn-submit' %>
     </div>

     <% end %>
     </div>
