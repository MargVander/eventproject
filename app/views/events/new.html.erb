<%= render 'bannernewevent' %>




<div class="container col-md-8 order-md-1">
  <legend class="text-light"align="center">Where do you want to bring us ?</legend>

  <%= form_tag url_for(action: 'create'), multipart: true, method: "post" do %>



     <div class="form-group">
           <%= label_tag 'Date' %>
           <%= text_field_tag 'start_date', @start_date, class: "form-control "  %>
     </div>

     <div class="form-group">
           <%= label_tag 'Duration' %>
           <%= text_field_tag 'duration', @duration, class: "form-control "  %>
     </div>

     <div class="form-group">
           <%= label_tag 'Title' %>
           <%= text_field_tag 'title', @title, class: "form-control "  %>
     </div>

     <div class="form">
           <%= label_tag 'Description' %>
           <%= text_area_tag 'description', @description, class: "form-control" %>
     </div><br>

     <div class="form-group">
           <%= label_tag 'Price' %>
           <%= text_field_tag 'price', @price, class: "form-control "  %>
     </div>

     <div class="form-group">
           <%= label_tag 'Location' %>
           <%= text_field_tag 'location', @location, class: "form-control "  %>
     </div>
     <div class="form-group">

     <%= file_field_tag :picture %>
 </div>


     <div class="form-group">
           <%= submit_tag "Create event", class: 'btn btn-success btn-lg btn-submit btn-block' %>
     </div>

     <% end %>
     </div>
